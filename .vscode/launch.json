
{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",  // Updated to look for main.py in an app directory
                "--reload",
                "--port",
                "8000"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}"  // Explicitly setting the working directory
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against FastAPI",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}"
        }
    ],
    "compounds": [
        {
            "name": "FastAPI + Chrome",
            "configurations": ["Python: FastAPI", "Launch Chrome against FastAPI"],
            "stopAll": true
        }
    ]
}